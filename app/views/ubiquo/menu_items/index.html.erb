<h1><%= render :partial => 'title' %></h1>
<h2>
	<%= render :partial => 'submenu' %>
</h2>
<%= render :partial => "shared/ubiquo/feedback" %>
<% link_to_new = link_to t('ubiquo.menus.new_section'), new_ubiquo_menu_item_path, :class => "new" %>
<% if @menu_items.size > 0 %>
  <%= link_to_new %>
  <table id="menu_items_list_titles" width="100%" border="1" cellspacing="0" cellpadding="3">
    <tr>
      <th><%= t('ubiquo.menus.title') %></th>
      <th class="actions"><%= t('ubiquo.menus.actions') %></th>
    </tr>
  </table>
  <ul id="menu_items_list">
    <%= build_list(@menu_items, 'menu_items_list') %>
  </ul>
<% else %>
  <%= render :partial => "shared/ubiquo/lists/empty", 
             :locals => { :name => 'menu_item',
                          :link_to_new => link_to_new,
                          :model => MenuItem } %>	
<% end %>

<% content_for :sidebar do %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.menus.menu_items.index")) %>
<% end %>
